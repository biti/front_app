<div id='address-area'>
  <span style='font-size:18px'>购买清单</span>
</div>

<table id='cart-table' width="980" border="0" align="center" cellpadding="0" >
  <tr style='background-color:#CCC;'>
    <th>商品</td>
    <th>颜色/尺寸</td>
    <th>单价</td>
    <th>数量</td>
    <th>小计</td>
    <th></td>
  </tr>

  <% index = 0 %>
  <% @cart_datas.each do |partner, items| %>
    <tr style='background-color:#E2F2FF;'>
      <td colspan='6'>店铺：<%= partner %></td>
    </tr>

    <% items.each do |item| %>
      <% index += 1 %>
    <%= hidden_field_tag "items[#{index}][sku_id]", item.sku_id %>
    <%= hidden_field_tag "items[#{index}][quantity]", item.quantity %>
    <tr class='cart-item'>
      <td>
        <%= link_to item.product_name, product_path(item.product_id), style: 'color:blue' %>
      </td>
      <td>
        <%= item.sku_specification %>
      </td>

      <td>
        <%=item.price%>
      </td>
  
      <td>
        <%= item.quantity %>
      </td>
  
      <td class='cart-item-total'>
        <%= item.price * item.quantity %>
      </td>
      <td>
      </td>
    </tr>
    <% end %>
  <% end %>
</table>

<div>
	<span>
	  商品总价(含运费)：
	  <em style='color: #F60;font: 24px tahoma;margin-right: 3px;text-shadow: 0 1px 1px #CCC;'>
	    <%= @total_fee %>
	  </em>元
	</span>
</div>