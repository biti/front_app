<h2>
  <%= link_to returning.product.name, returning.product %>
</h2>
<span class="quantity">x <%= returning.quantity %></span>
<% if returning.amount %>
<span class="amount">= ï¿¥<%= returning.amount %></span>
<% end %>
<% if returning.delivered_at %>
(<span class="deliverer"><%= returning.deliverer %></span>:
<span class="tracking_no"><%= returning.tracking_no %></span>)
<% end %>
<p class="cause"><%= returning.cause %></p>
<% if returning.remark %>
<p class="remark"><%= returning.remark %></p>
<% end %>
<% if returning.accepted_at %>
<h5><b>Accepted at:</b><%= returning.accepted_at %></h5>
<% if returning.delivered_at %>
<h5><b>Delivered at:</b><%= returning.delivered_at %></h5>
<% end %>
<% end %>
<% if returning.settled_at %>
<h5><b><%= %w{Solved Cancelled Rejected}[returning.settle] %> at:</b><%= returning.settled_at %></h5>
<% end %>
<div class="actions">
  <%= link_to "Show", returning, :class => "show" %>
  <% unless returning.settled_at || returning.delivered_at %>
  <% if returning.accepted_at %>
  <%= link_to "Deliver", edit_returning_path(returning) %>
  <% end %>
  <%= link_to "Cancel", returning, :method => :delete, :data => { confirm: 'Are you sure?' } %>
  <% end %>
</div>
