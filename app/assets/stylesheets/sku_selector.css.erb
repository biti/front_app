.guig-box {border-left:solid 1px #dcdcdc;padding:4px 0px 0;font:normal 12px arial,'微软雅黑'}
.guig-box .gg-note-title{display:none;}
.guig-box dl{margin:0 10px 4px;}
.guig-box dt{float:left;width:60px;line-height:26px;}
.guig-box dd{float:left;width:172px;position:relative;}
.guig-box dd ul{overflow:auto;zoom:1;}
.guig-box dd li{float:left;margin:0 4px 4px 0;position:relative;padding:1px;display:inline;}
.guig-box dd li a{float:left;line-height:20px;padding:0 4px;border:solid 1px #dcdcdc;white-space:nowrap}
.guig-box dd li a:hover,.guig-box dd .gg-selected  a{border:solid 2px #fa5000;margin:-1px;position:relative;text-decoration:none;}
.guig-box dd input{border:solid 1px #cacaca;height:16px;padding:2px 4px 0px;}
.guig-box dd .ss-input{width:60px;margin-right:4px;}
.guig-box dd .fd-input{width:150px;}
.guig-box dd .gg-selected em{display:block;bottom:0px;right:0px;width:10px;height:10px;overflow:hidden;background:url(<%=asset_path 'javascripts/sku_selector/images/checked-tip.gif'%>) no-repeat;}

.guig-box dd .disabled a{border:dashed 1px #eaeaea;color:#999;cursor: not-allowed;}
.guig-box dd .disabled a:hover{margin:0;border:dashed 1px #eaeaea}

.guig-out .gg-confirm {display:none; padding:4px 0 10px 80px; overflow:hidden; zoom:1; }
.gg-attention{border:Solid 1px #ff6600;border-bottom-width:2px;position:absolute;width:280px;background:#fff;z-index:20;left:578px;padding-top:0;}
.gg-attention .gg-note-title{display:block;background:#FFF8F7;border-bottom:solid 1px #eaeaea;margin-bottom:10px;height:24px;padding:0 10px;position:relative;line-height:24px}
.gg-attention .gg-note-title .to-close{position:absolute;right:10px;top:8px;cursor:pointer;}
.gg-attention .gg-note-title .to-close img{display:block;}
.gg-attention .gg-confirm input{vertical-align: middle; float:left; margin-left:10px; }
.gg-attention .gg-confirm span{font-size:24px; float:left; font-weight:bold; color:#ff6600;}
